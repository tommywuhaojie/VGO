<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="@drawable/first_page_bg">

    <Button
        android:layout_width="170dp"
        android:layout_height="43.33dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sign_up_button"
        android:onClick="onSignUpClicked"
        android:textColor="@color/testview_color"
        android:background="@drawable/sign_up_button_red"
        style="?android:attr/borderlessButtonStyle"
        android:layout_above="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="170dp"
        android:layout_height="43.33dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/login_button"
        android:onClick="onLoginClicked"
        android:textColor="@color/testview_color"
        android:background="@drawable/login_button_white"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sign_up_button"
        android:layout_marginBottom="56.66dp" />

</RelativeLayout>