<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"
    android:background="#50B9AC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="334dp"
        android:background="#1B5F5F">

        <Button
            android:layout_width="170dp"
            android:layout_height="43.33dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/sign_up_button"
            android:onClick="onSignUpClicked"
            android:textColor="@color/testview_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/sign_up_button_red"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="170dp"
            android:layout_height="43.33dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/login_button"
            android:onClick="onLoginClicked"
            android:textColor="@color/testview_color"
            android:background="@drawable/login_button_white"
            android:layout_below="@+id/sign_up_button"
            android:layout_alignStart="@+id/sign_up_button"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="234dp"
        android:layout_marginBottom="157.33dp"
        android:background="@drawable/skyline_cloud"
        android:clickable="false"
        android:id="@+id/skyline"></RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="v1.0.0 alpha"
        android:id="@+id/alpha_label"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"/>

</RelativeLayout>