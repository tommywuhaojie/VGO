<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        android:src="@drawable/white_field" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView8"
        android:src="@drawable/white_field"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14.33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23.33dp"
        android:src="@drawable/login_button_red"
        android:onClick="onLoginClicked" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phone"
        android:singleLine="true"
        android:textColor="#35332E"
        android:hint="PHONE NUMBER"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:textSize="14dp"
        android:layout_alignTop="@+id/imageView7"
        android:layout_above="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView11"
        android:autoText="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passcode"
        android:layout_alignStart="@+id/phone"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8"
        android:singleLine="true"
        android:textColor="#35332E"
        android:hint="PASSWORD"
        android:background="#00000000"
        android:textSize="14dp"
        android:layout_above="@+id/imageView9" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView11"
        android:src="@drawable/cellphone"
        android:layout_alignStart="@+id/imageView7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="17dp"
        android:layout_alignTop="@+id/imageView7" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView12"
        android:src="@drawable/key"
        android:layout_alignTop="@+id/imageView8"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginTop="17dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/back_arrow"
        android:layout_marginLeft="16.66dp"
        android:onClick="onBackArrowClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22.33dp" />

</RelativeLayout>