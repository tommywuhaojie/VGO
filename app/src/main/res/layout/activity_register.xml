
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="v_go.version10.ActivityClasses.Register"
    android:background="#6495ED">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/RegisterButton"
        android:textAllCaps="false"
        android:id="@+id/sign_up_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="registerIsClicked"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/sign_up_button">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:clickable="true"
            android:focusableInTouchMode="true" >


            //DRIVER INFORMATION
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="User Information"
                android:layout_gravity="center"
                android:id="@+id/textView"
                android:textColor="#ffffff" />

            //EMAIL
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email"
                    android:id="@+id/textView1"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/email"
                    android:singleLine="true"
                    android:layout_marginTop="10sp"
                    />
            </LinearLayout>
            //PASSWORD
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Password"
                    android:id="@+id/textView2"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pwd"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //CONFIRM PASSWORD
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Confrim "
                    android:id="@+id/textView3"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pwdCon"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //FIRST NAME
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="First Name"
                    android:id="@+id/textView4"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/firstName"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //LAST NAME
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Last Name"
                    android:id="@+id/textView5"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/lastName"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //PHONE#
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Phone #"
                    android:id="@+id/textView6"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/phoneNum"
                    android:singleLine="true"
                    />
            </LinearLayout>

            //VEHICLE INFORMATION
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Vehicle Information"
                android:layout_gravity="center"
                android:id="@+id/textView11"
                android:textColor="#ffffff"
                android:layout_marginTop="20sp" />

            //MAKE
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Make"
                    android:id="@+id/textView7"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    />
                <Spinner android:id="@+id/spinner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/carMake"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>
            //MODEL
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Model"
                    android:id="@+id/textView8"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText8"
                    android:layout_marginTop="10sp"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //YEAR
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Year"
                    android:id="@+id/textView9"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    />
                <Spinner android:id="@+id/spinner2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/year"
                    android:layout_marginTop="10sp"/>
            </LinearLayout>
            //COLOR
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Color"
                    android:id="@+id/textView10"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10sp"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText10"
                    android:layout_marginTop="10sp"
                    android:singleLine="true"
                    />
            </LinearLayout>
            //PLATE NUMBER
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Plate #"
                    android:id="@+id/alpha_label"
                    android:textColor="#ffffff"
                    android:layout_weight="1"
                    />
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/editText12"
                    android:inputType="textCapCharacters"
                    android:singleLine="true"
                    />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
