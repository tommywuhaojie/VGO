<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#6495ED">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView31"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/start_adr"
        android:layout_alignParentStart="true"
        android:src="@drawable/a_marker_resized"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:id="@+id/textView30"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/b_marker_resized"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:id="@+id/textView32"
        android:layout_below="@+id/textView30"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/start"
        android:layout_marginLeft="3dp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="starting_address"
        android:textColor="#000000"
        android:id="@+id/start_adr"
        android:gravity="left"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/start_diff"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ending_address"
        android:textColor="#000000"
        android:id="@+id/end_adr"
        android:layout_alignTop="@+id/textView30"
        android:layout_alignStart="@+id/start_adr"
        android:gravity="left" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="departure_time"
        android:textColor="#000000"
        android:id="@+id/depart_time"
        android:layout_alignTop="@+id/textView32"
        android:layout_alignStart="@+id/end_adr"
        android:gravity="left"
        android:singleLine="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="starting_diff"
        android:textColor="#000000"
        android:id="@+id/start_diff"
        android:singleLine="true"
        android:gravity="right"
        android:layout_alignTop="@+id/start_adr"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ending_diff"
        android:textColor="#000000"
        android:id="@+id/end_diff"
        android:gravity="right"
        android:singleLine="true"
        android:layout_alignTop="@+id/end_adr"
        android:layout_alignStart="@+id/start_diff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="time_diff"
        android:textColor="#000000"
        android:id="@+id/time_diff"
        android:singleLine="true"
        android:layout_alignTop="@+id/depart_time"
        android:layout_alignStart="@+id/end_diff"
        android:gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Passenger/Driver"
        android:id="@+id/passenger_or_driver"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

</RelativeLayout>