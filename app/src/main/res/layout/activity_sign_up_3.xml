<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/step_2_3_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#FFFFFF"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PROFILE PICTURE"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#1B5F5F" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31.66dp"
        android:src="@drawable/step_three" />

    <ImageView
        android:layout_width="183.33dp"
        android:layout_height="183.33dp"
        android:id="@+id/avator"
        android:layout_below="@+id/progress_bar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avator"
        android:layout_marginTop="31.66dp"
        android:maxHeight="183.33dp"
        android:maxWidth="183.33dp"
        android:minHeight="183.33dp"
        android:minWidth="183.33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView27"
        android:src="@drawable/photo_gallery"
        android:layout_alignTop="@+id/imageView28"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:clickable="true"
        android:onClick="onGalleryClicked"
        android:nestedScrollingEnabled="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView28"
        android:src="@drawable/camera"
        android:layout_marginTop="138dp"
        android:layout_alignTop="@+id/avator"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp"
        android:onClick="onCameraClicked"
        android:clickable="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:layout_below="@+id/imageView27"
        android:layout_centerHorizontal="true"
        android:src="@drawable/set_button"
        android:layout_marginTop="27.66dp"
        android:onClick="onSetClicked" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView20"
        android:src="@drawable/skip_button"
        android:layout_below="@+id/imageView19"
        android:layout_alignStart="@+id/imageView19"
        android:layout_marginTop="7dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:src="@drawable/back_arrow"
        android:layout_marginLeft="16.66dp"
        android:onClick="onBackArrowClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22.33dp" />

</RelativeLayout>